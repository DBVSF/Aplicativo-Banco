<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SA2.Views.LoginPage"
             Title ="Login">
    <ContentPage.Content>
        <StackLayout>
            
     
            <Button Text="Logar" Command="{Binding LogarCommand}" />


            <Entry x:Name="txtcpf"
                   Placeholder="CPF"
                   Text="{Binding Cpf}"
                   VerticalOptions="Start"
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Start"
                   Keyboard="Numeric"  
                   MaxLength="11"/>

            <Entry x:Name="txtSenha"
                   Placeholder="Senha"
                   Text="{Binding Senha}"
                   VerticalOptions="Start"
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Start"
                   IsPassword="True"
                   Keyboard="Numeric"
                   MaxLength="4"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>